<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12 d-flex justify-content-center">
            <form id="team-form" class="add-team" enctype="multipart/form-data">
                <input type="hidden" id="team-id" value="<%= teamMember._id %>">
                
                <div class="contain">
                    <label for="image">Add Image</label>
                    <% if (teamMember.image && teamMember.image.fileURL) { %>
                        <div style="margin-bottom: 10px;">
                            <img src="<%= teamMember.image.fileURL %>" alt="Current Image" 
                                 style="width: 100px; height: 100px; object-fit: cover; border-radius: 5px; border: 1px solid #ccc;">
                            <p style="font-size: 12px; color: #666; margin-top: 5px;">Current Image (Upload new to replace)</p>
                        </div>
                    <% } %>
                    <input type="file" id="image" accept="image/png, image/jpeg">
                    <span id="error-message" style="color: red; display: none;">Only JPG and PNG images are allowed!</span>
                </div>
                
                <div class="contain">
                    <label for="position">Position</label>
                    <select name="position" id="level" required>
                        <option value="Senior Management" <%= teamMember.position === 'Senior Management' ? 'selected' : '' %>>Senior Management</option>
                        <option value="Management" <%= teamMember.position === 'Management' ? 'selected' : '' %>>Management</option>
                        <option value="Staff" <%= teamMember.position === 'Staff' ? 'selected' : '' %>>Staff</option>
                    </select>
                </div>
                <div class="contain">
                    <label for="name">Name</label>
                    <input type="text" id="name" value="<%- teamMember.name ? teamMember.name : '' %>" required>
                </div>
                <div class="contain">
                    <label for="designation">Designation</label>
                    <input type="text" id="designation" value="<%- teamMember.designation ? teamMember.designation : '' %>" required>
                </div>
                
                <div class="contain" id="description-container">
                    <label for="description">Description</label>
                    <textarea name="description" id="description" rows="3"><%- teamMember.description ? teamMember.description : '' %></textarea>
                </div>
                <button type="submit" class="submit-btn">Update</button>
                <!-- <a href="<%= process.env.MIPIE_BACKEND_URL %>/admin/team/view" class="btn btn-secondary" style="margin-left: 10px; padding: 10px; text-decoration: none; display: inline-block;">Cancel</a> -->
            </form>
        </div>
    </div>
</div>
<style>
     .add-team {
            background: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            width: 350px;
            display: flex;
            flex-direction: column;
        }

        .add-team label {
            font-weight: bold;
            margin-bottom: 5px;
            color: #333;
        }

        .add-team input,
    .add-team select,
    .add-team textarea {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 15px;
        background: #f9f9f9;
        transition: 0.3s ease-in-out;
        width: 100%;
        margin-bottom: 15px;
    }
    .add-team input:focus,
    .add-team select:focus,
    .add-team textarea:focus {
        border-color: #fc2b5a;
        outline: none;
        background: #ffffff;
        box-shadow: 0px 0px 5px rgba(252, 43, 90, 0.2);
    }

        .add-team input[type="file"] {
            padding: 5px;
            background: transparent;
        }
        .add-team textarea {
        resize: none;
    }
    .add-team select {
        cursor: pointer;
    }
        .submit-btn {
        background: #fc2b5a;
        color: white;
        font-size: 16px;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background 0.3s ease-in-out, transform 0.2s;
    }

    .submit-btn:hover {
        background: #fc2b5a;
        transform: scale(1.02);
    }
    .btn-secondary {
        background: #6c757d;
        color: white;
        font-size: 16px;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        transition: background 0.3s ease-in-out;
    }
    .btn-secondary:hover {
        background: #5a6268;
    }
</style>
<script>
    // Show/hide description based on position
    document.getElementById("level").addEventListener("change", function() {
        var descriptionContainer = document.getElementById("description-container");
        
        if (this.value === "Staff") {
            descriptionContainer.style.display = "none"; 
        } else {
            descriptionContainer.style.display = "block"; 
        }
    });

    // Initialize description visibility on page load
    document.addEventListener("DOMContentLoaded", function() {
        var position = document.getElementById("level").value;
        var descriptionContainer = document.getElementById("description-container");
        
        if (position === "Staff") {
            descriptionContainer.style.display = "none"; 
        } else {
            descriptionContainer.style.display = "block"; 
        }
    });

    // Image validation
    document.getElementById("image").addEventListener("change", function() {
        var file = this.files[0];
        if (file) {
            var fileType = file.type;
            if (fileType !== "image/png" && fileType !== "image/jpeg") {
                document.getElementById("error-message").style.display = "block";
                this.value = ""; 
            } else {
                document.getElementById("error-message").style.display = "none";
            }
        }
    });

    // Form submission
    $(document).ready(function () {
        $("#team-form").on("submit", function (e) {
            e.preventDefault();

            const formData = new FormData();
            const teamId = $("#team-id").val();
            
            // Check if new image is selected
            const imageFile = $("#image")[0].files[0];
            if (imageFile) {
                formData.append("file", imageFile);
            }
            
            formData.append("name", $("#name").val());
            formData.append("position", $("#level").val());
            formData.append("designation", $("#designation").val());
            
            const position = document.getElementById("level").value;
            if (position != "Staff") {
                formData.append("description", $("#description").val());
            }

            // Submit button state
            $("button[type=submit]").text("Updating...").attr("disabled", true);

            $.ajax({
                url: "<%= process.env.MIPIE_BACKEND_URL %>/admin/team/edit/" + teamId,
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    console.log("Response:", response);
                    alert("Team Member updated successfully!");
                    window.location.href = "<%= process.env.MIPIE_BACKEND_URL %>/admin/team/view";
                },
                error: function (xhr, status, error) {
                    console.error("Error:", error);
                    alert("Failed to update team member. Please try again.");
                    $("button[type=submit]").text("Update").attr("disabled", false);
                },
            });
        });
    });
</script>

<% include ../partials/footer %>
</body>
</html>

