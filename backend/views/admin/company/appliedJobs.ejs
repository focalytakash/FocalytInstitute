								$('#errorMsg').hide();
								$('#errorMsg').text('');
								$('#successMsg').show();
								$('#successMsg').text(res.data.message)
								window.location.reload();
							  }else{
								$('#successMsg').hide();
								$('#successMsg').text('');
								$('#errorMsg').show();
								$('#errorMsg').text(res.data.message)
